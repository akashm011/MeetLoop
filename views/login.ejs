<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="login-signup.css" type="text/css" />
    <title>MeetLoop</title>
  </head>
  <body>
    <main class="block-form">
      <h2>Log - In</h2>
      <form action="/user/login" method="post">
        <div class="form-floating mb-3 custom-width">
          <input
            type="email"
            name="email"
            class="form-control"
            id="floatingInput"
            placeholder="name@example.com"
          />
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating custom-width mb-5">
          <input
            type="password"
            name="password"
            class="form-control"
            id="floatingPassword"
            placeholder="Password"
          />
          <label for="floatingPassword">Password</label>
        </div>

        <% if (locals.error) { %>
        <div class="container">
          <div class="container-fluid mt-4">
            <div class="alert alert-danger" role="alert">
              <%= locals.error %>
            </div>
          </div>
        </div>
        <% } %>
        <br />
        <button type="submit" class="btn btn-warning custom-button">
          Log - In
        </button>
      </form>
    </main>
    <%- include('./partials/script') %>
  </body>
</html>
